{
  //  "extends": "../shared/tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "*"
      ],
      "shared/*": [
        "../shared/*"
      ],
      "@shared/*": [
        "../shared/types/*"
      ],
    },
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "skipLibCheck": false,
    "pretty": true,
    "noEmit": false,
    "noErrorTruncation": true,
    "allowSyntheticDefaultImports": true
  },

  "include": [
    "src/**/*",
    "types",
    "../shared/types/**/*.ts",
    "types"
  ]
}
